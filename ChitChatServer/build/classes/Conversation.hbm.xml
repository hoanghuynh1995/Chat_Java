<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ChatPackage.Conversation" table="conversation">
        <id name="id" type="int">
			<column name="id"/>
            <generator class="increment"/>
        </id>
        <property name="name" type="java.lang.String">
			<column name="name"/>
		</property>
		<property name="groupChat" type="boolean">
			<column name="groupchat"/>
		</property>
		<property name="totalSentence" type="int">
			<column name="totalsentence"/>
		</property>
	</class>
</hibernate-mapping>
